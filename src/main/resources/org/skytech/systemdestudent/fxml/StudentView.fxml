<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="500.0" prefWidth="1000.0" spacing="10"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.skytech.systemdestudent.controller.StudentController">

        <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
        </padding>

        <!-- Top - Input Form -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-radius: 5;">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Student Information" />
            <Separator />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                    <ColumnConstraints percentWidth="25" />
                </columnConstraints>

                <!-- Row 1 -->
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <Label text="Registration Number:" />
                    <TextField fx:id="regNoField" promptText="e.g., S2024001" />
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <Label text="First Name:" />
                    <TextField fx:id="firstNameField" promptText="Enter first name" />
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <Label text="Last Name:" />
                    <TextField fx:id="lastNameField" promptText="Enter last name" />
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <Label text="Enrollment Date:" />
                    <DatePicker fx:id="enrollmentDatePicker" prefWidth="Infinity" />
                </VBox>

                <!-- Row 2 -->
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <Label text="Email:" />
                    <TextField fx:id="emailField" promptText="student@example.com" />
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <Label text="Date of Birth:" />
                    <DatePicker fx:id="dobPicker" prefWidth="Infinity" />
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <Label text="Department:" />
                    <TextField fx:id="departmentField" promptText="e.g., Computer Science" />
                </VBox>

                <VBox spacing="5" GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <Label text="Phone Number:" />
                    <TextField fx:id="phoneField" promptText="e.g., +254700000000" />
                </VBox>

                <!-- Row 3 -->
                <VBox spacing="5" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="2">
                    <Label text="Address:" />
                    <TextArea fx:id="addressArea" prefRowCount="2" promptText="Enter address" />
                </VBox>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
            </GridPane>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="addButton" onAction="#handleAddStudent" prefWidth="120" style="-fx-background-color: #27ae60; -fx-text-fill: white;" text="Add Student" />
                <Button fx:id="updateButton" onAction="#handleUpdateStudent" prefWidth="120" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Update Student" />
                <Button fx:id="deleteButton" onAction="#handleDeleteStudent" prefWidth="120" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete Student" />
                <Button fx:id="clearButton" onAction="#handleClearFields" prefWidth="120" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Clear Fields" />
            </HBox>
        </VBox>

        <!-- Bottom - Table View -->
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Student Records" />

            <TableView fx:id="studentTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
                    <TableColumn fx:id="regNoColumn" prefWidth="120" text="Reg No" />
                    <TableColumn fx:id="firstNameColumn" prefWidth="150" text="First Name" />
                    <TableColumn fx:id="lastNameColumn" prefWidth="150" text="Last Name" />
                    <TableColumn fx:id="enrollmentDateColumn" prefWidth="130" text="Enrollment Date" />
                    <TableColumn fx:id="emailColumn" prefWidth="200" text="Email" />
                    <TableColumn fx:id="departmentColumn" prefWidth="180" text="Department" />
                </columns>
            </TableView>
        </VBox>

    </VBox>
